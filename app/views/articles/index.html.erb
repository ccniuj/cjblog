            <% content_for :breadcrumb do %>
                <ol class="breadcrumb">
                    <li><a href="<%=root_path%>">邁向奇點</a></li>
                    <li class="active">文章</li>
                </ol> <!-- end of /.breadcrumb -->
            <% end %>

            <section class="blog-content">
                <div class="container">
                    <div class="row">
                        <main class="col-md-9 col-md-push-3" style="display: block;">
                            <% @articles.each do |article| %>
                              <article class="blog-item">
                                <img class="img-responsive center-block" src="<%= article.cover.url %>" alt="blog-item1">
                                <div class="blog-heading">
                                    <h3 class="text-capitalize"><%= article.title %></h3>
                                    <span class="date"><%= article.created_at.strftime('%m/%d/%Y') %></span>
                                </div>
                                <p><%= sanitize truncate(article.text, length: 300, separator: '</p>', escape: false) %></p>

                                <a href="<%= article_path(article) %>" class="text-capitalize ">
                                    繼續閱讀
                                    <span><i class="fa fa-angle-double-right"></i> </span>
                                </a>
                              </article> <!-- /.blog-item -->
                            <% end %>

                            <div class="row">
                                <div class= "col-md-6 col-md-offset-3 text-center">
                                    <%= paginate @paginate if @paginate %>
                                </div>
                            </div>
                        </main>

                        <!-- begin sidebar -->
                        <aside class="col-md-3 col-md-pull-9">
                            <!-- begin faq-widget -->
                            <div class="faq-widget">
                                <h4>所有文章</h4>

                                <% Article.group_by_created_at.each do |k, v| %>
                                <div class="topics">
                                    <div class="faq-c">
                                        <div class="faq-q">
                                            <%=k%> <span class="faq-t">+</span>
                                        </div>
                                        <div class="faq-a">
                                            <% v.each do |article| %>
                                              <%= link_to article.title, article_path(article) %><br>
                                            <% end %>
                                        </div>
                                    </div>
                                </div>
                                <% end %>
                            </div> <!-- /.faq-widget -->

                        </aside>
                        <!-- end sidebar -->
                    </div>
                </div>
            </section>
        <script>
            $(".faq-q").click( function () {
              var container = $(this).parents(".faq-c");
              var answer = container.find(".faq-a");
              var trigger = container.find(".faq-t");
              
              answer.slideToggle(200);
              
              if (trigger.hasClass("faq-o")) {
                trigger.removeClass("faq-o");
              }
              else {
                trigger.addClass("faq-o");
              }
            });
        </script>