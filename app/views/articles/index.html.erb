    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/img/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>CJBLOG</h1>
                        <hr class="small">
                        <span class="subheading">An enthuiastic self-learner</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% @articles.each do |article| %>
                  <div class="post-preview">
                    <%= link_to article_path(article) do %>
                        <h2 class="post-title">
                          <%= article.title %>
                        </h2>
                    <% end %>
                    <p class="post-meta"><%= article.created_at.strftime("%m/%d/%Y") %></p>
                  </div>
                  <hr>
                <% end %>

                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                      <%= paginate @articles, :orter_window => 3 %>
                    </li>
                </ul>
            </div>
        </div>
    </div>

